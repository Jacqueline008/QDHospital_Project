#bg_test{
    position: relative;
    top:180px;
    background-color: purple;
}
body{
    background-color: #f4f6f8;
}

/**********************登录容器***********************************/
#login_container{
    width:1000px;
    height:420px;
    margin:0 auto;
    position:relative;
    top:125px;
}
/*登录容器左侧内容*/
#login_container .left{
    width:650px;
    height:420px;
    float:left;
    background-image:url(../../../../images/login.jpg);
    background-position:center;
    background-size: cover;
    background-repeat:no-repeat;
}
/*登录容器右侧内容*/
#login_container .right{
    width:350px;
    height:420px;
    float:left;
    background-color: #fff;
}
/*1.标题 2.输入栏 3.错误提示 4.提交按钮*/
.right h2,.right .input_container,.right .error,.right input[type="submit"]{
    width: 300px;
    margin: 0px auto;
}
/*1.右侧内容中的标题*/
.right h2 {
    font-size:20px;
    padding-top: 40px;
}
/*2.右侧内容中的所有input输入栏*/
.right .input_container{
    height:50px;
    border:1px grey solid;
}
.input_container:hover{
    border:1px cadetblue solid;
    color:cadetblue;
}
/*input输入栏中左侧固定的label*/
.input_container .input_label{
    display: block;
    width:80px;
    height: 50px;
    float: left;
    line-height: 50px;
    font-size: 16px;
    padding-left: 10px;
}
/*input输入栏中右侧自适应的div*/
.input_container .input_content{
    margin-left: 80px;
    height: 49px;
}
.input_content input{
    width:100%;
    height: 49px;
    font-size: 16px;
    border: none;
    padding-left: 10px;
}
/*3.右侧内容中的错误提示*/
.right .error{
    height: 20px;
    clear:both;
    font-size: 13px;
    color: #ef7662;
    margin: 5px auto;
}
/*4.提交按钮*/
.right input[type="submit"]{
    display: block;
    height:50px;
    background-color:#3DAFA7;
    color:white;
    border:none;
    font-size:18px;
    transition:background-color 0.4s ease;
}
input[type="submit"]:hover{
    background-color:#ef7662;
}


/*媒体查询*/
@media only screen and (max-width: 1200px) {
    #bg_test{
        background-color: gray;
    }
    /**********************登录容器***********************************/
    #login_container{
        width:900px;
    }
    /*登录容器左侧内容*/
    #login_container .left{
        width:550px;
    }
}
@media only screen and (max-width: 992px) {
    #bg_test{
        background-color: pink;
    }
    /**********************登录容器***********************************/
    #login_container{
        width:700px;
    }
    /*登录容器左侧内容*/
    #login_container .left{
        width:350px;
    }
}
@media only screen and (max-width: 768px) {
    #bg_test{
        background-color: blue;
    }
    /**********************登录容器***********************************/
    #login_container{
        width:100%;
        height:380px;
        top:75px;
    }
    /*登录容器左侧内容*/
    #login_container .left{
        display: none;
    }
    /*登录容器右侧内容*/
    #login_container .right{
        width:100%;
        height:380px;
    }
    /*1.标题 2.输入栏 3.错误提示 4.提交按钮*/
    .right h2,.right .input_container,.right .error,.right input[type="submit"]{
        width: 95%;
        margin: 0px auto;
    }
    /*1.右侧内容中的标题*/
    .right h2 {
        font-size:18px;
        padding-top: 30px;
        padding-left: 10px;
    }
    /*2.右侧内容中的所有input输入栏*/
    .right .input_container{
        height:45px;
        border:1px grey solid;
        border-radius: 20px;
    }
    /*input输入栏中左侧固定的label*/
    .input_container .input_label{
        width:80px;
        height: 45px;
        line-height: 45px;
        font-size: 16px;
    }
    /*input输入栏中右侧自适应的div*/
    .input_container .input_content{
        margin-left: 80px;
        height: 43px;
        border-radius: 20px;
    }
    .input_content input{
        width:100%;
        height: 100%;
        font-size: 16px;
        border-radius: 20px;
    }
    /*3.右侧内容中的错误提示*/
    .right .error{
        height: 20px;
        clear:both;
        font-size: 13px;
        margin: 5px auto;
        padding-left: 10px;
    }
    /*4.提交按钮*/
    .right input[type="submit"]{
        height:45px;
        font-size:18px;
        border-radius: 20px;
    }
}


