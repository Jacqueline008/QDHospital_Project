body{
    margin:0;
    font-family:'微软雅黑';
    color:#444;
}

/****************************************************************/
/***********************header****************************************/
/*标头总背景*/
#site-nav{
    width:100%;
    height:65px;
    position:fixed;
    z-index:1000;
    background: #fff;
    box-shadow: 1.5px 2.598px 9px 0 rgba(0, 0, 0, 0.054);
}
/*承装标头中各内容的容器*/
#site-nav .sn-container{
    margin: 0 auto;
    width:1170px;
    height: 65px;
    /*background-color: pink;*/
}
/*网站Logo*/
#site-nav .sn-logo{
    float: left;
    position: relative;
    top:13px;
}
#site-nav .sn-logo img{
    width:220px;
    height: 41px;
}


/*媒体查询*/
@media only screen and (max-width: 1200px) {
    /*承装标头中各内容的容器*/
    #site-nav .sn-container{
        width: 970px;
    }
}
@media only screen and (max-width: 992px) {
    /*承装标头中各内容的容器*/
    #site-nav .sn-container{
        width: 750px;
    }
}
@media only screen and (max-width: 768px) {
    /*承装标头中各内容的容器*/
    #site-nav .sn-container {
        width: 100%;
    }
    /*网站Logo*/
    #site-nav .sn-logo{
        top:15px;
        left:5px;
    }
    #site-nav .sn-logo img{
        width:170px;
        height: 33px;
    }
    
}



/**********************************************************************/
/*************************footer*********************************************/
#footer{
    width:100%;
    height: 80px;
    background: #515151;
    position: relative;
    top:160px;
    line-height: 80px;
}
#footer .container{
    padding: 0px;
}
#footer img{
    width:100px;
    height: 50px;
}
#footer span{
    color:#fff;
    font-size: 14px;
    position: relative;
    top:5px;
    margin-left: 20px;
}

/*媒体查询*/
@media only screen and (max-width: 1200px) {
}
@media only screen and (max-width: 992px) {
}
@media only screen and (max-width: 768px) {
    #footer{
        height: 60px;
        top:120px;
        line-height: 60px;
    }
    #footer img{
        width:60px;
        height: 30px;
        margin-left: 3px;
    }
    #footer span{
        font-size: 12px;
        top:5px;
        margin-left: 5px;
    }
}